<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorStBack"
    tools:context=".PlayerActivity">

    <RelativeLayout
        android:id="@+id/player_top_layout"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/player_back">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar_player"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="163dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="163dp"
            android:src="@drawable/icon240" />

        <TextView
            android:id="@+id/name_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/avatar_player"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorIcon"
            android:text="Jose Luis Garcia"
            android:fontFamily="@font/signikasemibold"
            android:textSize="20sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/team_name_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_player"
            android:layout_marginTop="0dp"
            android:textColor="@color/colorIcon"
            android:text="FC Barcelona"
            android:fontFamily="@font/changasemibold"
            android:textSize="16sp"
            android:gravity="center"/>



    </RelativeLayout>

    <TextView
        android:id="@+id/number_player"
        android:layout_width="250sp"
        android:layout_height="85sp"
        android:layout_below="@+id/player_top_layout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="81dp"
        android:layout_marginTop="5dp"
        android:text="14"
        android:fontFamily="@font/bungeeinlineregular"
        android:textSize="50sp"
        android:textColor="@color/colorIcon"
        android:gravity="bottom|center"
        android:layout_marginEnd="81dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/yearcard_player"
        android:layout_width="180sp"
        android:layout_height="120sp"
        android:layout_below="@+id/number_player"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/colorStDarkest"
        app:cardCornerRadius="15sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age:"
            android:fontFamily="@font/changasemibold"
            android:textColor="@color/colorSt"
            android:textSize="18sp"
            android:layout_marginTop="10sp"
            android:layout_marginStart="10sp"/>

        <TextView
            android:id="@+id/year_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24 years"
            android:fontFamily="@font/changasemibold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_gravity="center"/>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/ovrcard_player"
        android:layout_width="175sp"
        android:layout_height="120sp"
        android:layout_below="@+id/number_player"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/colorStDarkest"
        app:cardCornerRadius="15sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overall:"
            android:fontFamily="@font/changasemibold"
            android:textColor="@color/colorSt"
            android:textSize="18sp"
            android:layout_marginTop="10sp"
            android:layout_marginStart="10sp"/>

        <TextView
            android:id="@+id/ovr_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="75"
            android:fontFamily="@font/changasemibold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_gravity="center"/>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/poscard_player"
        android:layout_width="210sp"
        android:layout_height="120sp"
        android:layout_below="@+id/yearcard_player"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        app:cardBackgroundColor="@color/colorStDarkest"
        app:cardCornerRadius="15sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Position:"
            android:fontFamily="@font/changasemibold"
            android:textColor="@color/colorSt"
            android:textSize="18sp"
            android:layout_marginTop="10sp"
            android:layout_marginStart="10sp"/>

        <TextView
            android:id="@+id/pos_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Central\nMidfielder"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_gravity="center"/>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/heightcard_player"
        android:layout_width="145sp"
        android:layout_height="120sp"
        android:layout_below="@+id/ovrcard_player"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        app:cardBackgroundColor="@color/colorStDarkest"
        app:cardCornerRadius="15sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height:"
            android:fontFamily="@font/changasemibold"
            android:textColor="@color/colorSt"
            android:textSize="18sp"
            android:layout_marginTop="10sp"
            android:layout_marginStart="10sp"/>

        <TextView
            android:id="@+id/height_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="182 cm"
            android:fontFamily="@font/changasemibold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_gravity="center"/>


    </androidx.cardview.widget.CardView>



</RelativeLayout>