<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/teamcard_layout"
    android:layout_marginTop="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/team_back">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_teamcard"
        android:text="Season 1"
        android:textSize="28sp"
        android:textColor="@color/colorIcon"
        android:fontFamily="@font/signikabold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/coach_teamcard"
        android:text="Coach: Gerard Garcia"
        android:textSize="16sp"
        android:fontFamily="@font/signikabold"
        android:layout_marginTop="45dp"
        android:textColor="@color/colorIcon"
        android:layout_marginStart="25dp"/>

</androidx.cardview.widget.CardView>