<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:id="@+id/getdialog_layout"
    android:background="@color/colorBackground">

    <TextView
        android:id="@+id/teaminfo_getdialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:singleLine="true"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:textSize="20dp"
        android:hint="@string/selectTeam"
        android:fontFamily="@font/changasemibold"/>

    <Spinner
        android:id="@+id/team_spinner_getdialog"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/teaminfo_getdialog"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp" />

    <Button
        android:id="@+id/approve_getdialog"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/team_spinner_getdialog"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/button_green"
        android:text="@string/approve" />

</RelativeLayout>